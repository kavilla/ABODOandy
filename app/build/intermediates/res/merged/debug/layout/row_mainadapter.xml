<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_gravity="center_horizontal">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/activity_main_iv_tile"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Price Range Text View"
            android:id="@+id/activity_main_tv_pricerange"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="4dp"
            android:layout_marginBottom="8dp"
            android:textSize="16dp"
            android:background="@android:color/background_dark"
            android:textColor="@color/colorPrimary"
            android:fontFamily="sans-serif-light" />
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Bed Range Text View"
        android:id="@+id/activity_main_tv_bedrange"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="15dp"
        android:fontFamily="sans-serif-light"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Prop Name Text View"
        android:id="@+id/activity_main_tv_propname"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:textSize="14dp"
        android:fontFamily="sans-serif-light"
        android:layout_marginBottom="4dp" />
</LinearLayout>